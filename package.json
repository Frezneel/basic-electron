{
  "name": "my-first-app",
  "version": "1.0.0",
  "description": "",
  "main": "main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:css": "npx tailwindcss -i ./styles.css -o ./output.css --watch",
    "dev": "vite"
  },
  "build": {
    "appId": "com.aniweb.belajar-build",
    "productName": "Belajar Build",
    "copyright": "Copyright Â© 2024 Your Aniweb",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "renderer/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "deb"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15"
  },
  "dependencies": {
    "auto-launch": "^5.0.6"
  }
}
